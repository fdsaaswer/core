{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description" : "Copyright (c) 2018 Open Connectivity Foundation, Inc. All rights reserved.",
    "id": "http://openconnectivityfoundation.github.io/core/schemas/oic.r.pushpayload.json#",
    "title": "Push Payload Format",
    "definitions": {
      "oic.r.pushpayloadentry": {
        "type": "object",
        "properties": {
          "anchor": {
            "type": "string",
            "maxLength": 256,
            "format": "uri",
            "description": "Context URI of the resource being pushed"
          },
          "href": {
            "type": "string",
            "maxLength": 256,
            "format": "uri",
            "description": "URI of the resource being pushed"
          },
          "rt": {
            "type": "array",
            "items" : {
                "type" : "string",
                "maxLength": 64
              },
            "minItems" : 1,
            "readOnly": true,
            "description": "Resource Type of the resource being pushed"
          },
          "if": {
            "type": "array",
            "items": {
                "type" : "string",
                "enum" : ["oic.if.baseline", "oic.if.ll", "oic.if.b", "oic.if.lb", "oic.if.rw", "oic.if.r", "oic.if.a", "oic.if.s" ]
              },
            "minItems": 1,
            "maxItems": 1,
            "readOnly": true,
            "description": "The interface associated with the representation provided."
          },
          "rep": {
            "type": "object",
            "description": "The push payload for a single resource"
          }
        },
        "additionalProperties": true,
        "required": ["anchor","rt","if","rep"]
      }
    },
    "type": "array",
    "items": {
      "$ref": "#/definitions/oic.r.pushpayloadentry"
    }
}
